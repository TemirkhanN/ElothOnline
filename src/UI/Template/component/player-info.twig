<div class="col-lg-3 d-none d-lg-block">
    <ul class="list-group myStickyListGroup shadow bg-white rounded">
        <li class="list-group-item rounded">
            <font size="5"><b>{{ player.name }}</b></font> Lv. {{ player.level }}<br>
            <font size="2">HP: {{ player.currentHealth }}/{{ player.maxHealth }}</font>
            |
            {% if player.stamina < 50 %}
                <font size="2">Stamina: <font color="yellow"> {{ player.stamina }}</font>/100</font>
            {% elseif player.stamina < 10 %}
                <font size="2">Stamina: <font color="red"> {{ player.stamina }}</font>/100</font>
            {% else %}
                <font size="2">Stamina: {{ player.stamina }}/100</font>
            {% endif %}
            <hr>
            <center>
                <pre>Skills</pre>
            </center>
            <font size="2">Experience: {{ player.exp }} /{{ player.nextLevelExp }}<br>
                Magic: {{ player.magic }}<br>
                Strength: {{ player.strength }}<br>
                Defense: {{ player.defence }}<br>
            </font>
        </li>
        <li class="list-group-item rounded">
            <center>
                <pre>Abilities</pre>
            </center>
            <font size="2">
                {% if player.woodcutting > 0 %}Lumberjack: {{ player.woodcutting }}<br>{% endif %}
                {% if player.mining > 0 %}Miner: {{ player.mining }} <br>{% endif %}
                {% if player.gathering > 0 %}Gatherer: {{ player.gathering }} <br>{% endif %}
                {% if player.harvesting > 0 %}Farmer: {{ player.harvesting }} <br>{% endif %}
                {% if player.blacksmith > 0 %}Craft: {{ player.blacksmith }} <br>{% endif %}
                {% if player.alchemy > 0 %}Alchemist: {{ player.alchemy }} <br>{% endif %}
            </font>
        </li>
        <li class="list-group-item rounded">
            <center>
                <pre>Bank</pre>
            </center>
            <font size="2">
                Gold: {{ player.gold }}<br>
                Crystals: {{ player.crystals }} <br>
            </font>
        </li>
        <li class="list-group-item rounded">
            <center>
                <pre>Log</pre>
            </center>
            <font size="1">
                {% for log in player.logs(3) %}
                    {{ log }}<br>
                {% endfor %}
            </font>
        </li>
    </ul>
    <hr class="d-sm-none">
</div>
